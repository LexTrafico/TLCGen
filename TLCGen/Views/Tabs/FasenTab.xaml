<UserControl x:Class="TLCGen.Views.FasenTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TLCGen.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl TabStripPlacement="Left" SelectedItem="{Binding Path=SelectedTab}" SelectedIndex="{Binding Path=SelectedTabIndex}">
            <TabItem Header="Overzicht" >
                <local:FasenLijstOverView />
            </TabItem>
            <TabItem Header="Functies" >
                <local:FasenDetailsView />
            </TabItem>
            <TabItem Header="Tijden" >
                <local:FasenLijstTimersView />
            </TabItem>
            <TabItem Header="Maxgroen" >
                <local:MaxGroentijdenSetsView DataContext="{Binding Path=MaxGroentijdenLijstVM}" />
            </TabItem>
        </TabControl>
        <WrapPanel Grid.Row="1">
            <Button Content="Fase toev." Margin="0,2" Command="{Binding Path=AddFaseCommand}" />
            <Button Content="Fase verw." Margin="2,2,0,2" Command="{Binding Path=RemoveFaseCommand}" />
            <ComboBox ItemsSource="{Binding Path=Templates}" Margin="2" SelectedIndex="0" IsEnabled="False" />
            <Button Content="Toevoegen" Margin="0,2" Command="{Binding Path=AddTemplate}" IsEnabled="False" />
            <Button Content="Opslaan" Margin="2,2,0,2" Command="{Binding Path=AddTemplate}" IsEnabled="False" />
            <Button Content="Verwijderen" Margin="2,2,0,2" Command="{Binding Path=AddTemplate}" IsEnabled="False" />
        </WrapPanel>
    </Grid>
</UserControl>
