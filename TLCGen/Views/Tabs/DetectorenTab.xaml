<UserControl x:Class="TLCGen.Views.DetectorenTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TLCGen.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl TabStripPlacement="Left">
            <TabItem Header="Per fase" >
                <local:DetectorenFasenLijstView DataContext="{Binding Path=DetectorenFasenLijstVM}" />
            </TabItem>
            <TabItem Header="Extra" >
                <local:DetectorenLijstView DataContext="{Binding Path=DetectorenExtraLijstVM}" />
            </TabItem>
            <!--<TabItem Header="Details" >
                
            </TabItem>-->
        </TabControl>
    </Grid>
</UserControl>
