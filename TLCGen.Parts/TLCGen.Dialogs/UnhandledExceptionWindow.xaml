<Window x:Class="TLCGen.Dialogs.UnhandledExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        SizeToContent="WidthAndHeight" mc:Ignorable="d"
        Height="Auto" MaxHeight="800" Width="600" MaxWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Name="MessageLabel" />
        <TextBox Name="ExceptionTextTb" VerticalScrollBarVisibility="Auto"
                 MaxHeight="500" FontFamily="Courier New" FontSize="10"
                 Margin="2" AcceptsReturn="True" AcceptsTab="True" IsReadOnly="True" Grid.Row="1" />
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button Content="OK" IsDefault="True" Margin="2" Click="OKButton_Click"
                    Width="100" />
            <Button Content="Verzenden melding" Margin="2" Click="SendButton_Click" MinWidth="100" />
        </StackPanel>
    </Grid>
</Window>
