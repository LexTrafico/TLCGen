<Window x:Class="TLCGen.Dialogs.UnhandledExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TLCGen.Dialogs"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d"
        Height="Auto" Width="600" MaxWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Name="MessageLabel" />
        <TextBox Name="ExceptionTextTB" VerticalScrollBarVisibility="Auto"
                 MaxHeight="500" FontFamily="Courier New" FontSize="10"
                 Margin="2" AcceptsReturn="True" AcceptsTab="True" IsReadOnly="True" Grid.Row="1" />
        <Button Content="OK" IsDefault="True" Margin="2" Click="OKButton_Click" Name="OKButton" Grid.Row="2"
                    Width="100" />
    </Grid>
</Window>
